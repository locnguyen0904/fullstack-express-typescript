# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Database
# Note: MongoDB root password is managed via Docker secrets (secrets/mongo_root_password.txt)
# Do NOT set MONGO_INITDB_ROOT_PASSWORD here - it conflicts with MONGO_INITDB_ROOT_PASSWORD_FILE
DATABASE_URL=mongodb://admin:change-me-strong-password@mongo:27017/backend-template?authSource=admin&replicaSet=rs0&directConnection=true
MONGO_INITDB_ROOT_USERNAME=admin

# Redis
# Note: Redis password is managed via Docker secrets (secrets/redis_password.txt)
# Do NOT set REDIS_PASSWORD here - it is read from /run/secrets/redis_password inside the container
REDIS_URL=redis://:change-me-redis-password@redis:6379

# JWT
JWT_SECRET=change-me-jwt-secret-key-at-least-32-characters
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30

# Admin Seed
ADMIN_NAME="Super Admin"
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-admin-password

# Application
NODE_ENV=production
PORT=3000

# Logging (JSON to stdout, use log drivers for collection)
LOG_LEVEL=info

# CORS
# ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# Bull Board (queue monitoring UI at /admin/queues)
BULL_BOARD_USERNAME=change-me-username
BULL_BOARD_PASSWORD=change-me-strong-password

# OpenTelemetry (optional)
# OTEL_ENABLED=true
# OTEL_EXPORTER_ENDPOINT=http://otel-collector:4318
# OTEL_SERVICE_NAME=backend-template

# Frontend
VITE_API_URL=https://api.your-domain.com
