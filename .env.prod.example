# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Database
DATABASE_URL=mongodb://mongo:27017/backend-template
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-me-strong-password

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=change-me-redis-password

# JWT
JWT_SECRET=change-me-jwt-secret-key-at-least-32-characters

# Application
NODE_ENV=production
PORT=3000
