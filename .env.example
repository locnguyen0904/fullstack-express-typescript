# Database
# Note: Credentials in DATABASE_URL must match MONGO_INITDB_ROOT_* below
DATABASE_URL=mongodb://admin:password123@mongo:27017/backend-template?authSource=admin&replicaSet=rs0&directConnection=true

# MongoDB credentials (for Docker setup)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123

# JWT config
JWT_SECRET=change-me-jwt-secret-key-at-least-32-characters
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30

# Admin Seed
ADMIN_NAME="Super Admin"
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=password123

# Node environment
NODE_ENV=development

# Logging (JSON to stdout, use log drivers for collection)
LOG_LEVEL=debug

# Server (optional, default: 3000)
PORT=3000

# Redis (optional)
REDIS_URL=redis://localhost:6379

# OpenTelemetry (optional, disabled by default)
# OTEL_ENABLED=true
# OTEL_EXPORTER_ENDPOINT=http://localhost:4318
# OTEL_SERVICE_NAME=backend-template

# Bull Board (queue monitoring UI at /admin/queues)
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=admin
