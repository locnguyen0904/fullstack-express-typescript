# Database
# For local development (Docker)
DATABASE_URL=mongodb://mongo:27017/backend-template
# For production with authentication (uncomment and update)
# DATABASE_URL=mongodb://admin:password@mongo:27017/backend-template?authSource=admin

# MongoDB credentials (for Docker setup)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123

# JWT config
JWT_SECRET=change-me-jwt-secret-key-at-least-32-characters
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30

# Admin Seed
ADMIN_NAME="Super Admin"
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=password123

# Node environment
NODE_ENV=development

# Logging
LOG_LEVEL=debug
LOG_DIR=logs

# Server (optional, default: 3000)
PORT=3000

# Redis (optional)
REDIS_URL=redis://localhost:6379
