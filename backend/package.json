{
  "name": "backend-template",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node --import ./dist/instrumentation.js dist/server.js",
    "dev": "tsx watch --import ./src/instrumentation.ts src/server.ts",
    "prebuild": "rimraf dist",
    "build": "tsc && tsc-alias",
    "test": "jest --runInBand --silent",
    "test:coverage": "jest --runInBand --coverage",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "eslint './src/**/*.{js,ts}' --fix",
    "prettier": "prettier --check './src/**/*.{js,ts}'",
    "prettier:fix": "prettier --write './src/**/*.{js,ts}'",
    "seed:dev": "tsx src/db/seeds",
    "seed": "node dist/db/seeds",
    "generate": "plop"
  },
  "keywords": [],
  "author": "Loc Nguyen",
  "license": "ISC",
  "description": "Minimal backend base code",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@bull-board/api": "^6.16.4",
    "@bull-board/express": "^6.16.4",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.211.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "argon2": "^0.44.0",
    "bullmq": "^5.67.3",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-zod-safe": "^3.1.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.22.1",
    "mongoose-aggregate-paginate-v2": "^1.0.4",
    "mongoose-delete": "^1.0.7",
    "mongoose-paginate-v2": "^1.9.1",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "rate-limit-redis": "^4.3.1",
    "reflect-metadata": "^0.2.2",
